<div>

  <h1>Style-generator</h1>
  <hr>

  <div class="form" role="form">

    <div class="row">

      {{!-- BEFORE --}}
      <div class="col-sm-6">
        <h3>Before (Title)</h3>
        <div class="sub-form">

          <div class="form-group">
            <label for="font-size-text">padding size</label>
            <div class="row">
              <div class="col-sm-8 col-xs-6">
                <input data-hook="font-size-range" class="font-size" type="range" min="8" max="30" step="1" value="12"/>
              </div>
              <div class="font-size-text col-sm-4 col-xs-6">
                <input data-hook="font-size-text" id="font-size-text" type="text" class="form-control">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="before-color-picker-text">font color</label>
            <div class="row">
              <div class="col-sm-8 col-xs-6">
                <input data-hook="before-color-picker" class="color-picker" type="color">
              </div>
              <div class="color-picker-text col-sm-4 col-xs-6">
                <input data-hook="before-color-picker-text" id="before-color-picker-text" type="text" class="form-control">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="before-font-size-text">font size</label>
            <div class="row">
              <div class="col-sm-8 col-xs-6">
                <input data-hook="before-font-size-range" class="font-size" type="range" min="8" max="30" step="1" value="12"/>
              </div>
              <div class="font-size-text col-sm-4 col-xs-6">
                <input data-hook="before-font-size-text" id="before-font-size-text" type="text" class="form-control">
              </div>
            </div>
          </div>

        </div>
      </div> {{!-- /before --}}

      {{!-- TARGET --}}
      <div class="col-sm-6">
        <h3>Target</h3>
        <div class="sub-form">

          <div class="form-group">
            <label for="target-color-picker-text">font color</label>
            <div class="row">
              <div class="col-sm-8 col-xs-6">
                <input data-hook="target-color-picker" class="color-picker" type="color">
              </div>
              <div class="color-picker-text col-sm-4 col-xs-6">
                <input data-hook="target-color-picker-text" id="target-color-picker-text" type="text" class="form-control">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="target-font-size-text">font size</label>
            <div class="row">
              <div class="col-sm-8 col-xs-6">
                <input data-hook="target-font-size-range" class="font-size" type="range" min="8" max="30" step="1" value="12"/>
              </div>
              <div class="font-size-text col-sm-4 col-xs-6">
                <input data-hook="target-font-size-text" id="target-font-size-text" type="text" class="form-control">
              </div>
            </div>
          </div>

        </div>
      </div> {{!-- /target --}}

      {{!-- LOCK --}}
      <div class="col-sm-12">
        <h3>Locks</h3>
        <div class="sub-form">

          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <div class="checkbox">
                  <label>
                    <input data-hook="check-lock-color" type="checkbox"> lock font color
                  </label>
                </div>
              </div>
              <div class="col-xs-6">
                <div class="checkbox">
                  <label>
                    <input data-hook="check-lock-font-size" type="checkbox"> lock font size
                  </label>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div> {{!-- /lock --}}

    </div>  {{!-- /row --}}
  </div>  {{!-- /form --}}

  <hr>

  <pre><code class="javascript">this.mogger.traceObj({
    before: {
        message: 'Simple Obj 1'
    },
    localBeforeConfig: {
        size: <span data-hook="code-before-size"></span>,
        css: <span data-hook="code-before-css"></span>
    },

    targetTitle: 'SIMPLE_OBJ_1',
    localTargetConfig: {
        css: <span data-hook="code-target-css"></span>
    }
});
</code></pre>

</div>
