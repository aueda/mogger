<div>

  <h1>Style-generator</h1>
  <hr>

  <div class="form-horizontal" data-hook="form">

    <div class="form-group">
      <label class="col-sm-2 control-label" for="font-size">Font size</label>
      <div class="col-sm-3">
        <input data-hook="font-size" type="range" min="8" max="30" step="1" value="12"/>
      </div>
      <div class="col-sm-1">
        <input data-hook="font-size" type="text" class="form-control">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="font-color">Font color</label>
      <div class="col-sm-1">
        <input data-hook="font-size" type="text" class="form-control">
      </div>
      <div>
        <input class="color-picker" data-hook="color-picker" type="color">
      </div>
    </div>

  </div>

</div>
